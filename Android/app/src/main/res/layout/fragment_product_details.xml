<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".fragments.ProductDetailsFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:visibility="gone"
        android:id="@+id/control"
        android:orientation="vertical"
        tools:context=".fragments.ProfilFragment">


        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/boarding_1"
            android:layout_height="0dp"
            android:layout_weight="2.6"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:text="Fırsatlar Bitti!"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:lines="2"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text="Ama üzülme senin için farklı ürünlerimizde var onları ister misin..."
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/alt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/txt_border_red"
                android:id="@+id/close"
                android:gravity="center"
                android:padding="10dp"
                android:text="GERİ"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/go"
                android:layout_weight="4"
                android:background="@drawable/txt_price"
                android:gravity="center"
                android:padding="10dp"
                android:text="KEŞFET"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>



    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/card_stack_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:padding="5dp"
        android:clipToPadding="false">
    </com.yuyakaido.android.cardstackview.CardStackView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:id="@+id/altbar"
        android:layout_gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/fav"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                app:strokeColor="#D0021B"
                app:strokeWidth="1dp">



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/like"
                    android:src="@drawable/ic_baseline_favorite_border_24" />


            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/txt_price"
                android:gravity="center"
                android:padding="10dp"
                android:id="@+id/sales"
                android:text="Sepete Ekle"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                android:id="@+id/share"
                app:strokeColor="#D0021B"

                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/black"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/ic_baseline_share_24" />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>